---
const { titulo, imagen } = Astro.props;
---

<section>
  <a href={`/tecnologias/${titulo.toLowerCase()}`}>
    <img src={imagen.fields.file.url} alt={titulo} />
  </a>
</section>


<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    cursor: pointer;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  img {
    max-width: 300px;
    height: 300px;
    object-fit: cover;
  }
</style>